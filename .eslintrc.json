{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/style"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "root": true,
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": [
      "tsconfig.eslint.json"
    ]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
